<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rohsins.project_test.ShutDown">

    <TextView android:id="@+id/shutDownTextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownTextView01"
        android:textSize="22sp" />

   <EditText android:id="@+id/shutDownEditText01"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:inputType="numberPassword"
       android:text="@string/shutDownEditText01"
       android:layout_below="@id/shutDownTextView01"
       android:layout_marginTop="10dp"/>

    <Button android:id="@+id/shutDownButton01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownButton01"
        android:background="@drawable/button_style"
        android:layout_below="@id/shutDownEditText01"
        android:layout_marginTop="10dp"
        android:onClick="shutDown"/>

    <Button android:id="@+id/shutDownButton02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownButton02"
        android:background="@drawable/button_style"
        android:layout_below="@id/shutDownButton01"
        android:layout_marginTop="10dp"
        android:onClick="shutDownAbort"/>

    <Button android:id="@+id/shutDownButton03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownButton03"
        android:background="@drawable/button_style"
        android:layout_below="@id/shutDownButton02"
        android:layout_marginTop="10dp"
        android:onClick="restart"/>

    <Button android:id="@+id/shutDownButton04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownButton04"
        android:background="@drawable/button_style"
        android:layout_below="@id/shutDownButton03"
        android:layout_marginTop="10dp"
        android:onClick="hibernate"/>

    <Button android:id="@+id/shutDownButton05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shutDownButton05"
        android:background="@drawable/button_style"
        android:layout_below="@id/shutDownButton04"
        android:layout_marginTop="10dp"
        android:onClick="wakeUp"/>


</RelativeLayout>
