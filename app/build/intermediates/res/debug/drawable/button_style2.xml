<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ff58ebca" />
      <stroke
          android:width="0dp"
          android:color="#ff998e69" />
      <corners
          android:radius="600dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ffffff"
          android:endColor="#ff8d9498"
          android:angle="225" />
      <stroke
          android:width="4dp"
          android:color="#ff997e57" />
      <corners
          android:radius="600dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>



