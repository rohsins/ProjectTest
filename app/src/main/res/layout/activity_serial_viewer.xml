<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/serialViewer_horizontal_margin"
    android:paddingRight="@dimen/serialViewer_horizontal_margin"
    android:paddingTop="@dimen/serialViewer_vertical_margin"
    android:paddingBottom="@dimen/serialViewer_vertical_margin"
    tools:context=".SerialViewer">

    <!-- TextView android:text="@string/SerialViewer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/ -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:background="#ffd2d9dd"/>

    <TextView android:id="@+id/serialViewerTextView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="84dp"
        android:textSize="14sp"
        android:scrollbars="vertical"
        android:text="@string/serialViewerDefaultText"/>

    <TextView android:id="@+id/textViewSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewSync"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"/>

    <Switch
        android:id="@+id/syncSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:clickable="true"/>

    <TextView android:id="@+id/textViewUpdateRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updateRate"
        android:textSize="19sp"
        android:textStyle="italic"
        android:layout_above="@id/textViewSync"
        android:layout_marginBottom="10dp"/>

    <EditText android:id="@+id/editTextUpdateRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editTextdefault"
        android:inputType="numberDecimal"
        android:layout_above="@id/syncSwitch"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"/>

    <TextView android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewUnit"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:layout_above="@id/syncSwitch"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
