<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rohsins.project_test.Others">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/others"
        android:textSize="20sp"
        android:layout_marginTop="0dp" /> <!-- 50 -->

    <Button
        android:id="@+id/othersButton1"
        android:background="@drawable/button_style3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/altium"
        android:textSize="18sp"
        android:onClick="othersFunction01"
        android:layout_marginTop="30dp" /> <!-- 80 -->

    <Button
        android:id="@+id/othersButton2"
        android:background="@drawable/button_style3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/chrome"
        android:textSize="18sp"
        android:onClick="othersFunction02"
        android:layout_marginTop="10dp" /> <!-- 80 -->

    <Button
        android:id="@+id/othersButton3"
        android:background="@drawable/button_style3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/showDesktop"
        android:textSize="18sp"
        android:onClick="othersFunction03"
        android:layout_marginTop="10dp" /> <!-- 80 -->

    <Button
        android:id="@+id/othersButton4"
        android:background="@drawable/button_style3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/shutDown"
        android:textSize="18sp"
        android:onClick="othersFunction04"
        android:layout_marginTop="10dp" /> <!-- 80 -->


</LinearLayout>
